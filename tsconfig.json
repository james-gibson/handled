{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "types": [],
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@handled/postgres": ["libs/postgres/src/index.ts"],
      "@handled/darksky": ["libs/darksky/src/index.ts"],
      "@handled/config": ["libs/config/src/index.ts"],
      "@handled/intake": ["libs/intake/src/index.ts"],
      "@handled/types": ["libs/types/src/index.ts"],
      "@handled/homeassistant": ["libs/homeassistant/src/index.ts"],
      "@handled/security": ["libs/security/src/index.ts"],
      "@handled/wifi": ["libs/wifi/src/index.ts"],
      "@handled/observation": ["libs/observation/src/index.ts"],
      "@handled/domestic": ["libs/domestic/src/index.ts"],
      "@handled/safety": ["libs/safety/src/index.ts"],
      "@handled/commute": ["libs/commute/src/index.ts"],
      "@handled/auto": ["libs/auto/src/index.ts"],
      "@handled/audio": ["libs/audio/src/index.ts"],
      "@handled/video": ["libs/video/src/index.ts"],
      "@handled/doors": ["libs/doors/src/index.ts"],
      "@handled/benjamin": ["libs/benjamin/src/index.ts"],
      "@handled/quickbooks": ["libs/quickbooks/src/index.ts"],
      "@handled/ynab": ["libs/ynab/src/index.ts"],
      "@handled/lights": ["libs/lights/src/index.ts"],
      "@handled/external": ["libs/external/src/index.ts"],
      "@handled/test-function": ["apps/test-function/"],
    }
  },
  "exclude": ["node_modules", "tmp", "dist", "**/*.spec.ts"],
  "include": ["libs/**/*.ts", "apps/**/*.ts"]
}
